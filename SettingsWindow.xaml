<Window x:Class="ModTranslatorSettings.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModTranslatorSettings"
        mc:Ignorable="d"
        Title="Настройки" Height="350" Width="300">

    <Grid>

        <CheckBox x:Name="ShowID" Content="Показать столбец ID" HorizontalAlignment="Left" Margin="15,25,0,0" VerticalAlignment="Top" Width="151" IsChecked="True" Unchecked ="ShowID_Unchecked" Checked ="ShowID_Checked"/>

        <CheckBox x:Name="EmptyExport" Content="Экспортировать только пустые строки" ToolTip="При экспорте в .csv экспортировать только непереведённые строки, заменяя их на оригинальный текст." HorizontalAlignment="Left" Margin="15,50,0,0" VerticalAlignment="Top" Width="240"/>

        <CheckBox x:Name="ImportLog" Content="Запись неудачного импорта" ToolTip="Запись в файл несоответствий строк импорта и загруженного оригинала." HorizontalAlignment="Left" Margin="15,75,0,0" VerticalAlignment="Top" Width="185" IsChecked="True"/>

        <CheckBox x:Name="ShowDubsID" Content="Отображать дубликаты ID" ToolTip="Отобразить в таблице дублированные ID." Margin="15,150,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="200" IsChecked="False" Checked="ShowDubsID_Checked" Unchecked ="ShowDubsID_Unchecked"/>

        <CheckBox x:Name="ShowBlocksymbols" Content="Отображать строки с {!} символом" ToolTip="Отобразить в таблице строки, помеченные игрой блокирующим символом {!}"  HorizontalAlignment="Left" Margin="15,125,0,0" VerticalAlignment="Top" Width="240" Checked="ShowBlocksymbols_Checked" Unchecked="ShowBlocksymbols_Unchecked" IsChecked="False"/>

        <CheckBox x:Name="ImportOnlyInEmpty" Content="Импортировать только в пустые строки" ToolTip="Импортировать только непереведённые строки. По умолчанию импортируемый файл заменяет собой переведенные ранее строки."  HorizontalAlignment="Left" Margin="15,100,0,0" VerticalAlignment="Top" Width="251"/>

        <Button x:Name="FixMenus" Content="Испр. menus.txt" ToolTip="Использовать с острожностью. Перезаписывает все дубликаты id в оригинальном файле menus.txt" HorizontalAlignment="Left" Margin="15,260,0,0" Click="FixMenus_Click" Height="30" Width="100" VerticalAlignment="Top" IsEnabled="False"/>

        <CheckBox x:Name="ShowNPC" Content="Подсветить персонажей в таблице" ToolTip="Включает подсветку строк в таблице там, где можно одназначно определить пол или того, к кому обращается игрок\нпс (не работает в режиме сравнения)"  HorizontalAlignment="Left" Margin="15,175,0,0" Width="220" Height="15" VerticalAlignment="Top" Checked="ShowFemales_Checked" Unchecked="ShowFemales_Unchecked" IsChecked="True"/>

        <CheckBox x:Name="CompMode" Content="Режим сравнения версий" ToolTip="Выбрать старую версию мода для сравнения и вывести только те строки, которые были добавлены\изменены в текущем моде" HorizontalAlignment="Left" Margin="15,200,0,0" VerticalAlignment="Top" Click="CompMode_Click" Width="230"/>

    </Grid>
</Window>
